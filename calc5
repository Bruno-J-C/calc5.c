  int valor1;
  int valor2;

  printf("insira o primeiro valor");
  int rep;
  rep= 10;

while (rep==10){

  printf("insira o primeiro valor\n");
  scanf("%d", &valor1);

  printf("insira o segundo valor");
  printf("insira o segundo valor\n");
  scanf("%d",&valor2);

